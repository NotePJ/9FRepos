@{
    ViewData["Title"] = "Manage " + ViewBag.DisplayName;
    var modelName = ViewBag.ModelName;
    var displayName = ViewBag.DisplayName;
}

<h4>Manage @displayName</h4>

<!-- Main Card Container -->
<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <strong>@displayName Management</strong>
                    <span class="small ms-1 text-muted">View and manage @displayName records</span>
                </div>
            </div>
            <div class="card-body">
                <!-- Action Buttons -->
                <div class="mb-3">
                    <button type="button" class="btn btn-core-inverse" id="btnAdd">
                        <i class="fa-solid fa-plus"></i> Add New
                    </button>
                    <button type="button" class="btn btn-core-inverse" id="btnRefresh">
                        <i class="fa-solid fa-refresh"></i> Refresh
                    </button>
                </div>

                <!-- AG Grid Container with Position Relative for Buttons -->
                <div class="position-relative mt-4">
                    <div class="grid-container" id="settingsGridContainer">
                        <button type="button" id="btnExportExcel" class="export-excel-btn" title="Export to Excel">
                            <i class="fa-regular fa-file-excel export-icon"></i>
                        </button>
                        <button class="fullscreen-toggle-btn" id="btnToggleFullscreen" title="Toggle Fullscreen">
                            <i class="fa-solid fa-expand"></i>
                        </button>
                        <div id="myGrid" class="ag-theme-alpine" style="height: 500px; width: 100%;"></div>
                        <div id="gridLoadingSpinner" class="position-absolute top-50 start-50 translate-middle d-none">
                            <div class="text-center">
                                <div class="spinner-border spinner-border-sm text-primary mb-2" role="status" style="width: 2rem; height: 2rem;">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <div class="text-muted">Loading grid data...</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Offcanvas Form (Right Side) -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="formOffcanvas" aria-labelledby="formOffcanvasLabel" data-bs-backdrop="static" data-bs-keyboard="false" style="width: 500px;">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="formOffcanvasLabel">Add @displayName</h5>
        <button type="button" class="btn-close" aria-label="Close" id="closeOffcanvasBtn"></button>
    </div>
    <div class="offcanvas-body">
        <form id="crudForm">
            <input type="hidden" id="recordId" name="recordId">
            <div id="formFields">
                <!-- Dynamic form fields will be generated here -->
            </div>
            <div class="mt-3 d-flex gap-2">
                <button type="button" class="btn btn-core-secondary-inverse flex-fill" id="cancelBtn">
                    <i class="fa-solid fa-times"></i> Cancel
                </button>
                <button type="submit" class="btn btn-core flex-fill" id="btnSave">
                    <span class="spinner-border spinner-border-sm d-none" id="saveSpinner"></span>
                    <span id="saveText"><i class="fa-solid fa-save"></i> Save</span>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Pass model name to JavaScript
        window.settingsConfig = {
            modelName: '@(ViewBag.ModelName ?? "Unknown")',
            displayName: '@(ViewBag.DisplayName ?? "Unknown")'
        };
        console.log('settingsConfig:', window.settingsConfig);
    </script>
    <!-- ExcelJS Library (CDN) -->
    <script src="~/lib/xlsx/exceljs/exceljs.min.js"></script>
    <!-- Load config first, then main script, then fullscreen, then excel export -->
    <script src="~/lib/razor/js/settings/budget.settings.config.js" asp-append-version="true"></script>
    <script src="~/lib/razor/js/settings/budget.settings.manage.js" asp-append-version="true"></script>
    <script src="~/lib/razor/js/settings/budget.setting.fullscreen.js" asp-append-version="true"></script>
    <script src="~/lib/razor/js/settings/budget.setting.excel.export.js" asp-append-version="true"></script>
}
