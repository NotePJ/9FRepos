@{
    ViewData["Title"] = "Role Management";
}

<h4>Role Management</h4>

<!-- Main Card Container -->
<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <strong>Role Management</strong>
                    <span class="small ms-1 text-muted">Manage roles and assign permissions</span>
                </div>
            </div>
            <div class="card-body">
                <!-- Action Buttons -->
                <div class="mb-3">
                    <button type="button" class="btn btn-core-inverse" id="btnAddRole">
                        <i class="fa-solid fa-plus"></i> Add New Role
                    </button>
                    <button type="button" class="btn btn-core-inverse" id="btnRefresh">
                        <i class="fa-solid fa-refresh"></i> Refresh
                    </button>
                </div>

                <!-- AG Grid Container -->
                <div class="position-relative mt-4">
                    <div class="grid-container" id="roleGridContainer">
                        <button type="button" id="btnExportExcel" class="export-excel-btn" title="Export to Excel">
                            <i class="fa-regular fa-file-excel export-icon"></i>
                        </button>
                        <button class="fullscreen-toggle-btn" id="btnToggleFullscreen" title="Toggle Fullscreen">
                            <i class="fa-solid fa-expand"></i>
                        </button>
                        <div id="roleGrid" class="ag-theme-alpine" style="height: 400px; width: 100%;"></div>
                        <div id="gridLoadingSpinner" class="position-absolute top-50 start-50 translate-middle d-none">
                            <div class="text-center">
                                <div class="spinner-border spinner-border-sm text-primary mb-2" role="status" style="width: 2rem; height: 2rem;">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <div class="text-muted">Loading roles...</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ═══════════════════════════════════════════════════════════════════════════ -->
<!-- Role Form Offcanvas (Right Side) -->
<!-- ═══════════════════════════════════════════════════════════════════════════ -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="roleFormOffcanvas" aria-labelledby="roleFormOffcanvasLabel" data-bs-backdrop="static" data-bs-keyboard="false" style="width: 700px;">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="roleFormOffcanvasLabel">
            <i class="fa-solid fa-user-tag me-2"></i>
            <span id="formTitleText">Add Role</span>
        </h5>
        <button type="button" class="btn-close" aria-label="Close" id="closeRoleFormBtn"></button>
    </div>
    <div class="offcanvas-body">
        <form id="roleForm" novalidate>
            <input type="hidden" id="roleId" name="roleId" value="0">

            <!-- Basic Info -->
            <div class="row mb-3">
                <div class="col-6">
                    <label for="roleCode" class="form-label">Role Code <span class="text-danger">*</span></label>
                    <input type="text" class="form-control form-control-sm" id="roleCode" name="roleCode" required>
                    <div class="invalid-feedback">Role Code is required</div>
                </div>
                <div class="col-6">
                    <label for="roleLevel" class="form-label">Role Level</label>
                    <input type="number" class="form-control form-control-sm" id="roleLevel" name="roleLevel" value="100" min="1" max="999">
                    <div class="form-text">Lower number = higher priority</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    <label for="roleName" class="form-label">Role Name (EN) <span class="text-danger">*</span></label>
                    <input type="text" class="form-control form-control-sm" id="roleName" name="roleName" required>
                    <div class="invalid-feedback">Role Name is required</div>
                </div>
                <div class="col-6">
                    <label for="roleNameTh" class="form-label">Role Name (TH)</label>
                    <input type="text" class="form-control form-control-sm" id="roleNameTh" name="roleNameTh">
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="isActive" name="isActive" checked>
                        <label class="form-check-label" for="isActive">Active</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="isSystem" name="isSystem">
                        <label class="form-check-label" for="isSystem">System Role (Read-only)</label>
                    </div>
                </div>
            </div>

            <!-- Permissions Section -->
            <div class="border-top pt-3 mt-3">
                <h6 class="mb-3">
                    <i class="fa-solid fa-shield me-1"></i> Permissions
                </h6>

                <!-- Permission Categories -->
                <div class="accordion" id="permissionAccordion">
                    <!-- Permission categories will be generated dynamically -->
                </div>
            </div>

            <!-- Form Buttons -->
            <div class="mt-4 pt-3 border-top d-flex gap-2">
                <button type="button" class="btn btn-core-secondary-inverse flex-fill" id="cancelRoleBtn">
                    <i class="fa-solid fa-times"></i> Cancel
                </button>
                <button type="submit" class="btn btn-core flex-fill" id="btnSaveRole">
                    <span class="spinner-border spinner-border-sm d-none" id="saveSpinner"></span>
                    <span id="saveText"><i class="fa-solid fa-save"></i> Save Role</span>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/xlsx/exceljs/exceljs.min.js"></script>
    <script src="~/lib/razor/js/settings/budget.setting.role.manage.js" asp-append-version="true"></script>
}
